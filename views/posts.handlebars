<div class=" bg-white w-full  rounded-lg mx-5 my-6 p-16 bg-indigo-400">

    <div class="flex flex-row items-center">
        <h1 class=" w-full text-2xl font-medium mb-2">{{post.title}}</h1>
        <div class="w-full flex justify-end ">
            <p class=" text-sm font-medium">Posted by {{post.user.username}} on {{format_date post.date}}</p>
        </div>
    </div>
    <p class="  text-sm  mb-4  ">
        {{post.content}}
    </p>

</div>

<div class="w-full">

    {{#each post.comments as |comment|}}
    <div class=" bg-white w-full  rounded-lg mx-auto my-6 p-5 bg-indigo-400">
        <p class=" italic text-sm  mb-4  ">
            {{comment.content}}
        </p>

        <div class="w-full flex justify-end ">
            <p class=" italic text-sm ">By {{comment.username}} on {{format_date comment.date}}</p>
        </div>

    </div>
    {{/each}}

    <div class=" bg-white w-full  rounded-lg mx-auto my-6 p-5 bg-indigo-200">

        <div class="flex flex-row items-center">
            <h1 class=" w-full text-2xl font-medium mb-2">Comment</h1>

        </div>
        <div class="h-full w-full rounded-lg text-center flex flex-col items-center justify-center items-center  ">
            <textarea class="usercomments  bg-gray-100 sec  h-full w-full  outline-none" spellcheck="false"
                placeholder=""></textarea>
        </div>
        {{!-- <div class="flex justify-center"> --}}
            <button
                class="comment-btn my-5 w-half flex justify-center bg-white text-gray-800 p-4  rounded-full tracking-wide
                                    font-semibold  focus:outline-none focus:shadow-outline hover:bg-indigo-400 shadow-lg cursor-pointer transition ease-in duration-300">
                Submit
            </button>
            {{!--
        </div> --}}
    </div>
</div>

<script src="../../js/comment.js"></script>